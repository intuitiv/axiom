{
  "name": "axiom-language",
  "displayName": "Axiom Prompt Language",
  "description": "Syntax highlighting for the Axiom prompt engineering language.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "axiom",
        "aliases": [
          "Axiom",
          "axiom"
        ],
        "extensions": [
          ".axiom"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "axiom",
        "scopeName": "source.axiom",
        "path": "./axiom.tmLanguage.json"
      }
    ]
  }
}